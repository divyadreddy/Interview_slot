<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<%# <%= week_calendar  events: @interviews do |date, interviews| %>
<%= month_calendar events: @interviews do |date, interviews| %> 
  <%= date %>

  <% interviews.each do |interview| %>
    <div>
      <%=  link_to interview.title, interview %>
    </div>
  <% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Interviewer id </th>
      <th>Interviewee id </th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.title %></td>
        <td><%= interview.interviewer_id %></td>
        <td><%= interview.interviewee_id %></td>
        <td><%= interview.start_time %></td>
        <td><%= interview.end_time %></td>
        <td><%= link_to 'Show', interview %></td>
        <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
        <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interview', new_interview_path %>
